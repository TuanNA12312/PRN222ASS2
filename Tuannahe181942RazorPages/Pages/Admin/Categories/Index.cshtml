@page
@model Tuannahe181942RazorPages.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Category Management";
}

<h1>Category Management</h1>

<p>
    <button type="button" class="btn btn-primary btn-popup"
            data-url="/Admin/Categories/Index?handler=CreatePartial"
            data-title="Create Category">
        Create New
    </button>
</p>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search by name..." asp-for="SearchQuery">
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoryList)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.CategoryDesciption)</td>
                <td>
                    <button type="button" class="btn btn-sm btn-info btn-popup"
                            data-url="/Admin/Categories/Index?handler=EditPartial&id=@item.CategoryId"
                            data-title="Edit Category">
                        Edit
                    </button> |

                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.CategoryId" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>