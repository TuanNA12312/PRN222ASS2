@page
@model Tuannahe181942RazorPages.Pages.Staff.News.IndexModel
@{
    ViewData["Title"] = "News Management";
}

<h1>News Management</h1>

<p>
    <a href="@Url.Page("Index", new { handler = "CreatePartial" })"
       class="btn btn-primary btn-popup"
       data-title="Create New Article">
        Create New
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created Date</th>
            <th>Status</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.NewsList != null)
        {
            @foreach (var item in Model.NewsList)
            {
                <tr>
                    <td>@item.NewsTitle</td>
                    <td>@item.CreatedDate?.ToShortDateString()</td>
                    <td>@(item.NewsStatus == true ? "Active" : "Inactive")</td>
                    <td>@item.Category?.CategoryName</td>
                    <td>
                        <a href="@Url.Page("Index", new { handler = "EditPartial", id = item.NewsArticleId })"
                           class="btn btn-info btn-popup"
                           data-title="Edit Article">
                            Edit
                        </a> |

                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.NewsArticleId" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}