@using BusinessObjects.Models
@model Tuannahe181942RazorPages.Pages.Staff.News.IndexModel
@{
    Layout = null;
    var categories = ViewData["Categories"] as List<Category>;
    var tags = ViewData["Tags"] as List<Tag>;
}

<form id="modal-form" method="post" asp-page-handler="Edit" asp-page="/Staff/News/Index">
    <input type="hidden" asp-for="News.NewsArticleId" />
    <input type="hidden" asp-for="News.CreatedDate" /> <div class="mb-3">
        <label asp-for="News.NewsTitle" class="form-label"></label>
        <input asp-for="News.NewsTitle" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="News.NewsContent" class="form-label"></label>
        <textarea asp-for="News.NewsContent" class="form-control" rows="3"></textarea>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="News.CategoryId" class="form-label"></label>
            <select asp-for="News.CategoryId" class="form-select"
                    asp-items="@(new SelectList(categories, "CategoryId", "CategoryName"))">
            </select>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="News.NewsStatus" class="form-label"></label>
            <select asp-for="News.NewsStatus" class="form-select">
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Tags</label>
        <div class="border p-2" style="max-height: 150px; overflow-y: auto;">
            @foreach (var tag in tags)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedTagIds" value="@tag.TagId" id="tag-@tag.TagId"
                           @(Model.SelectedTagIds.Contains(tag.TagId) ? "checked" : "")>
                    <label class="form-check-label" for="tag-@tag.TagId">@tag.TagName</label>
                </div>
            }
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>