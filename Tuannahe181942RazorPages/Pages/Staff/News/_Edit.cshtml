@model Tuannahe181942RazorPages.Pages.Staff.News.IndexModel
@{
    // Lấy dữ liệu categories và tags từ ViewData
    var categories = ViewData["Categories"] as List<BusinessObjects.Models.Category>;
    var tags = ViewData["Tags"] as List<BusinessObjects.Models.Tag>;
}

<form method="post" asp-page="Staff/News/Index" asp-page-handler="Edit">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="News.NewsArticleId" />

    <input type="hidden" asp-for="News.CreatedDate" />
    <input type="hidden" asp-for="News.CreatedById" />

    <div class="form-group">
        <label asp-for="News.NewsTitle" class="control-label"></label>
        <input asp-for="News.NewsTitle" class="form-control" />
        <span asp-validation-for="News.NewsTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="News.Headline" class="control-label"></label>
        <input asp-for="News.Headline" class="form-control" />
        <span asp-validation-for="News.Headline" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="News.NewsContent" class="control-label"></label>
        <textarea asp-for="News.NewsContent" class="form-control" rows="5"></textarea>
        <span asp-validation-for="News.NewsContent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="News.NewsSource" class="control-label"></label>
        <input asp-for="News.NewsSource" class="form-control" />
        <span asp-validation-for="News.NewsSource" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="News.CategoryId" class="control-label">Category</label>
        <select asp-for="News.CategoryId" class="form-control">
            <option value="">-- Select Category --</option>
            @if (categories != null)
            {
                @foreach (var category in categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            }
        </select>
        <span asp-validation-for="News.CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedTagIds" class="control-label">Tags</label>
        <select asp-for="SelectedTagIds" class="form-control" multiple="multiple" size="5">
            @if (tags != null)
            {
                @foreach (var tag in tags)
                {
                    <option value="@tag.TagId">@tag.TagName</option>
                }
            }
        </select>
        <span asp-validation-for="SelectedTagIds" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="News.NewsStatus" /> @Html.DisplayNameFor(model => model.News.NewsStatus)
        </label>
    </div>

    <div class="form-group text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>

</form>
